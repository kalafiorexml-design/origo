{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Origo Mastery Credential v1",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "subject",
    "issuanceDate",
    "credentialSubject",
    "proof"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array"
      ]
    },
    "type": {
      "type": [
        "string",
        "array"
      ]
    },
    "issuer": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "omLevel",
        "metrics",
        "artifacts"
      ],
      "properties": {
        "omLevel": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "metrics": {
          "type": "object",
          "required": [
            "hours",
            "difficulty",
            "rarity",
            "quality",
            "impact",
            "reliability",
            "mentoring"
          ],
          "properties": {
            "hours": {
              "type": "number",
              "minimum": 0
            },
            "difficulty": {
              "type": "number",
              "minimum": 0
            },
            "rarity": {
              "type": "number",
              "minimum": 0
            },
            "quality": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "impact": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "reliability": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "mentoring": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "path",
              "sha256"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "sha256": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "proof": {
      "type": "object",
      "required": [
        "type",
        "algorithm",
        "created",
        "signature"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "algorithm": {
          "type": "string"
        },
        "created": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      }
    }
  }
}