{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Origo Practice Credits Award v1",
  "type": "object",
  "required": [
    "type",
    "issuer",
    "subject",
    "issued",
    "amount",
    "details",
    "artifacts",
    "proof"
  ],
  "properties": {
    "type": {
      "const": "OPC.Award.v1"
    },
    "issuer": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "issued": {
      "type": "string"
    },
    "amount": {
      "type": "number"
    },
    "details": {
      "type": "object",
      "required": [
        "hours",
        "difficulty",
        "rarity",
        "q_score",
        "formula"
      ],
      "properties": {
        "hours": {
          "type": "number",
          "minimum": 0
        },
        "difficulty": {
          "type": "number",
          "minimum": 0
        },
        "rarity": {
          "type": "number",
          "minimum": 0
        },
        "q_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "formula": {
          "type": "string"
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          }
        }
      }
    },
    "proof": {
      "type": "object",
      "required": [
        "type",
        "algorithm",
        "created",
        "signature"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "algorithm": {
          "type": "string"
        },
        "created": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      }
    }
  }
}